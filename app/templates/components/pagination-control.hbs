
{{#if this.showPageNavigation}}
  <div class="flex">
    <div class="nav-arrows">
      <div class="nav-left">
    <i {{action "getPage" -1}} class="fas fa-caret-left"></i>
  </div>
  <div class="page-status"> <p>Page {{this.details.currentPage}} / {{this.details.pageCount}}</p></div>

  <div class="nav-right">
    <i {{action "getPage" 1}} class="fas fa-caret-right"></i>
  </div>
    </div>

  <div class="nav-goto">
    <label for="gotoPage">Go to Page</label>
    <Input class="goto-page" @type="number" @value={{this.publicGoToPage}} />
    <button {{action "getPage" null this.publicGoToPage}}>Go</button>
  </div>
  </div>


{{/if}}
