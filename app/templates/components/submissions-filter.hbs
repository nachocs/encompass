<div class="filter-items">
  <h2>Filter Criteria</h2>
  <ul class="primary-filter-list">
    <li>
      <label>Teacher</label>
        <SelectizeInput @store={{this.store}} @inputId="select-add-teacher" @maxItems={{1}} @initialItems={{initialTeacherItem}} @initialOptions={{teacherPoolOptions}} @onItemAdd={{action "updateSelectizeSingle"}} @onItemRemove={{action "updateSelectizeSingle"}} @labelField="username" @searchField="username" @valueField="id" @propToUpdate="selectedTeacher" @model="user" @placeholder="Search teachers by username" @isDisabled={{isTeacher}} />
      {{#each teacherFormErrors as |error|}}
        <p class="error-message">{{error}}</p>
      {{/each}}
    </li>
    <li>
      <label>Assignment</label>
        <SelectizeInput @store={{this.store}} @inputId="select-add-assignment" @maxItems={{1}} @initialOptions={{assignmentOptions}} @initialItems={{initialAssignmentItem}} @onItemAdd={{action "updateSelectizeSingle"}} @onItemRemove={{action "updateSelectizeSingle"}} @labelField="name" @searchField="name" @valueField="id" @model="assignment" @propToUpdate="selectedAssignment" @placeholder="Search assignments by name" />

      {{#each assignmentFormErrors as |error|}}
        <p class="error-message">{{error}}</p>
      {{/each}}
    </li>
    <li>
      <label>Problem</label>
      <SelectizeInput @store={{this.store}} @inputId="select-add-problem" @isAsync={{true}} @maxItems={{1}} @initialItems={{initialProblemItem}} @onItemAdd={{action "updateSelectizeSingle"}} @onItemRemove={{action "updateSelectizeSingle"}} @labelField="title" @searchField="title" @valueField="id" @model="problem" @propToUpdate="selectedProblem" @queryParamsKey="title" @topLevelQueryParams="filterBy" @placeholder="Search problems by title" @preload="focus" @secondaryFilters={{problemFilters}} />

      {{#each problemFormErrors as |error|}}
        <p class="error-message">{{error}}</p>
      {{/each}}
    </li>
    <li>
      <label>Class</label>
        <SelectizeInput @store={{this.store}} @inputId="select-add-section" @maxItems={{1}} @initialOptions={{sectionPoolOptions}} @initialItems={{initialSectionItem}} @onItemAdd={{action "updateSelectizeSingle"}} @onItemRemove={{action "updateSelectizeSingle"}} @labelField="name" @searchField="name" @valueField="id" @model="section" @propToUpdate="selectedSection" @placeholder="Search classes by name" />
      {{#each sectionFormErrors as |error|}}
        <p class="error-message">{{error}}</p>
      {{/each}}
    </li>
    <li>
      <label>Student</label>
        <SelectizeInput @store={{this.store}} @inputId="select-add-student" @maxItems={{20}} @initialOptions={{studentPoolOptions}} @initialItems={{initialStudentItem}} @onItemAdd={{action "updateSelectedStudents"}} @onItemRemove={{action "updateSelectedStudents"}} @labelField="username" @searchField="username" @valueField="id" @propToUpdate="selectedStudents" @model="user" @placeholder="Search students by username" />
      {{#each studentFormErrors as |error|}}
        <p class="error-message">{{error}}</p>
      {{/each}}
    </li>
    <li>
      <label>Date Range</label>
      <div class="single-text-input-container">
        <Input class="single-text-input" @id="startDate" @name="startDate" @type="text" @value={{startDate}} />
        <span class="seperator"> - </span>
        <Input class="single-text-input" @id="endDate" @name="endDate" @type="text" @value={{endDate}} />
      </div>
    </li>
    <li class="include-pows-input">
      <Input @type="checkbox" @checked={{doIncludeOldPows}} @name="doIncludeOldPows" />
      <label>Include Old Pows Work</label>
    </li>

    {{#if currentUser.isAdmin}}
      <li class="include-trashed-input">
        <Input @type="checkbox" @checked={{isTrashedOnly}} @name="isTrashedOnly" />
        <label>Only Trashed Answers</label>
      </li>
    {{/if}}

    <h3 {{action 'toggleVmtFilters'}} class="vmt-header">
      <i class="fas {{if showVmtFilters 'fa-chevron-down'}}{{unless showVmtFilters 'fa-chevron-right'}}"></i> Vmt
    </h3>

  {{#if showVmtFilters}}
  <ul class="vmt-filter-list">
    <li class="vmt-only-input">
      <Input @type="checkbox" @checked={{isVmtOnly}} @name="isVmtOnly" />
      <label>Include Only VMT Work</label>
    </li>
    <li>
      <div class="vmt-search">
      <label>Search by room, activity, or username</label>
      <Input class="single-text-input vmt-search" @name="vmt-search" @type="text" @value={{vmtSearchText}} />
      </div>
    </li>
  </ul>
  {{/if}}


    {{#if isMissingCriteria}}
      <ErrorBox @error={{missingCriteriaMessage}} @showDismiss={{true}} @resetError={{action (mut isMissingCriteria) null}} />
    {{/if}}

    {{#if isInvalidDateRange}}
      <ErrorBox @error={{invalidDateRangeMessage}} @showDismiss={{true}} @resetError={{action (mut isInvalidDateRange) null}} />
    {{/if}}

    <button class="primary-button search-answers" {{action "buildCriteria"}}>Search</button>
  </ul>
</div>


  {{#if isRequestInProgress}}
    <p class="info">Workspace creation is in progress... Thank you for your patience.</p>
  {{/if}}

