<div class="main-list">
  {{#each answers as |answer|}}
      <SubmissionViewerListItem @answer={{answer}} @selectedAnswerIds={{selectedAnswerIds}} @onSelect={{action "onSelect"}} @isList={{isList}} @isGrid={{isGrid}} @store={{store}} @threads={{threads}} @selectedMap={{answersSelectedHash}} @moreMenuOptions={{moreMenuOptions}} />
      {{else}}
      <div class="no-results-container">
        <p class="info">No submissions found</p>
        <img src="/images/no-results.svg" alt="No results">
        <p class="info">Please change the filter criteria</p>
      </div>
    {{/each}}
  </div>

  <div class="scroll-icon">
    {{#if scrollBottom}}
      <i class="fas fa-chevron-circle-down" {{action 'superScroll'}}></i>
    {{else}}
      <i class="fas fa-chevron-circle-up" {{action 'superScroll'}}></i>
    {{/if}}
  </div>

<script>
  $(document).scroll(function () {
    var y = $(this).scrollTop();
    if (y > 800) {
      $('.scroll-icon').fadeIn();
    } else {
      $('.scroll-icon').fadeOut();
    }
  });
</script>