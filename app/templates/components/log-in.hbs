<div class="login-box">

  <img src="images/logo-encompass.png" class="encompass-logo" alt="encompass logo">

  <form class="form-signin">
    <div class="auth-form-input">
      {{#if missingCredentials}}
      <ErrorBox @error="Incorrect username or password" @showDismiss={{true}} />
      {{/if}}

      <label for="username">Username:</label>
      <Input class="form-control" @name="username" @id="username" required={{true}} type="text" value={{username}}
        {{on "key-down" this.resetErrors}} />

      {{#if incorrectUsername}}
      <ErrorBox @error="Incorrect Username" @showDismiss={{true}} />
      {{/if}}
    </div>

    <div class="auth-form-input">
      <label for="password">Password:</label>
      <Input class="form-control" @name="password" @id="password" required={{true}} type="password" value={{password}}
        {{on "key-down" this.resetErrors}} />

      {{#if incorrectPassword}}
      <ErrorBox @error="Incorrect Password" @showDismiss={{true}} />
      {{/if}}

      {{#if oauthErrorMsg}}
      <ErrorBox @error={{oauthErrorMsg}} @showDismiss={{true}} />
      {{/if}}

    </div>

    <button class="auth-button" type="submit" {{action 'login' }}>Log In</button>
    {{#each postErrors as |error|}}
    <ErrorBox @error={{error}} @showDismiss={{true}} />
    {{/each}}
  </form>

  <div class="bottom-info">
    <p class="or">Or</p>

    <SocialSignin />

    <p class="signup-link" data-test="auth-signup"> New to EnCoMPASS? <LinkTo @route="auth.signup"
        @classNames="signup-link">Sign up now</LinkTo>
    </p>
    <p class="forgot-link">Forgot Password? <LinkTo @route="auth.forgot" @classNames="forgot-link">Request password
        reset</LinkTo>
    </p>

  </div>
</div>