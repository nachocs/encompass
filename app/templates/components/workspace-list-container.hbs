<div class="flex-container-full">
  <div class="flex-item-full filter-options collapse" id="filter-list-side">
    <WorkspaceFilter @store={{this.store}} @onUpdate={{action "triggerFetch"}} @triggerShowTrashed={{action "triggerShowTrashed"}} @triggerShowHidden={{action "triggerShowHidden"}} @toggleTrashed={{toggleTrashed}} @toggleHidden={{toggleHidden}} @filter={{filter}} @primaryFilter={{primaryFilter}} @adminFilterSelect={{adminFilterSelect}} @orgs={{organizations}} />
  </div>

  <div class="flex-item-full list-view">
    <div class="list-container">
      <h1>Workspaces</h1>
      <div class="searchbar">
        <SearchBar @onSearch={{action "searchWorkspaces"}} @showFilter={{true}} @searchOptions={{searchOptions}} @basePlaceholder="Search workspaces" @inputValue={{searchInputValue}} @clearSearchResults={{action "clearSearchResults"}} @selectedCriterion={{searchCriterion}} />

        <LinkTo @route="workspaces.new" @id="workspace-new-link" class="new-link-btn">
          <i class="fas fa-plus"></i>
        </LinkTo>
      </div>
    </div>
    <div class="results-list">
      <div class="results-info">
        <div class="results-message">
          {{{listResultsMessage}}}
        </div>
        <div class="side-icons">
          <i class="fas fa-redo-alt refresh-icon" {{action 'refreshList'}} title="Refresh Workspace list"></i>
          <span class="layout-icons">
          {{#if showList}}
            <img src="../assets/images/grid.svg" alt="grid" {{action 'setGrid'}} title="Show in grid view">
            <img src="../assets/images/list-active.svg" alt="list" {{action 'setList'}} title="Currently in list view">
          {{/if}}
          {{#if showGrid}}
            <img src="../assets/images/grid-active.svg" alt="grid" {{action 'setGrid'}} title="Currently in grid view">
            <img src="../assets/images/list.svg" alt="list" {{action 'setList'}} title="Show in list view">
          {{/if}}
          </span>
        </div>
      </div>
      <div class="results-items" id="layout-view">
        <div class="sort-bar">
          <div class="sort-bar-item mode">
            Mode <i class="fas fa-filter sort-icon"></i>
            <span class="hover-menu">
              <ul>
                {{#each modeOptions as |option|}}
                <li>
                  <RadioFilter @labelName={{option.label}} @labelIcon={{option.icon}} @inputValue={{option.value}} @isChecked={{option.isChecked}} @groupName="mode" @onClick={{action "updateMode"}} @groupValue={{selectedMode}} />
                </li>
                {{/each}}
              </ul>
            </span>
          </div>
          <ToggleControl @classToAdd="sort-bar-item name" @onUpdate={{action "updateSortCriterion"}} @initialState={{0}} @options={{sortOptions.name}} @label="Workspace Name" @parentProp={{sortCriterion}} @type="name" @activeType={{sortCriterion.type}} />
          <ToggleControl @classToAdd="sort-bar-item last-viewed" @onUpdate={{action "updateSortCriterion"}} @initialState={{1}} @options={{sortOptions.lastModifiedDate}} @label="Modified" @type="lastModifiedDate" @activeType={{sortCriterion.type}} />
          <ToggleControl @classToAdd="sort-bar-item submissions" @onUpdate={{action "updateSortCriterion"}} @initialState={{0}} @options={{sortOptions.submissions}} @label="Submissions" @type="submissions" @activeType={{sortCriterion.type}} />
          <ToggleControl @classToAdd="sort-bar-item selections" @onUpdate={{action "updateSortCriterion"}} @initialState={{0}} @options={{sortOptions.selections}} @label="Selections" @type="selections" @activeType={{sortCriterion.type}} />
          <ToggleControl @classToAdd="sort-bar-item comments" @onUpdate={{action "updateSortCriterion"}} @initialState={{0}} @options={{sortOptions.comments}} @label="Comments" @type="comments" @activeType={{sortCriterion.type}} />
          <ToggleControl @classToAdd="sort-bar-item responses" @onUpdate={{action "updateSortCriterion"}} @initialState={{0}} @options={{sortOptions.responses}} @label="Responses" @type="responses" @activeType={{sortCriterion.type}} />
          <ToggleControl @classToAdd="sort-bar-item owner" @onUpdate={{action "updateSortCriterion"}} @initialState={{0}} @options={{sortOptions.owner}} @label="Owner" @parentProp={{sortCriterion}} @type="owner" @activeType={{sortCriterion.type}} />
          <ToggleControl @classToAdd="sort-bar-item editors" @onUpdate={{action "updateSortCriterion"}} @initialState={{0}} @options={{sortOptions.collabs}} @label="Collab" @type="collabs" @activeType={{sortCriterion.type}} />
          <div class="sort-bar-item info-item"></div>
          <div class="sort-bar-item more"></div>
        </div>
        {{#if showList}}
          <WorkspaceList @currentUser={{model.currentUser}} @isSearching={{isSearchingWorkspaces}} @workspaces={{displayWorkspaces}} @metadata={{workspacesMetadata}} @isList={{true}} @isGrid={{false}} @moreMenuOptions={{moreMenuOptions}} @store={{this.store}} @toCopyWorkspace={{action "toCopyWorkspace"}} />
        {{/if}}
        {{#if showGrid}}
          <WorkspaceList @isSearching={{isSearchingWorkspaces}} @store={{this.store}} @workspaces={{displayWorkspaces}} @metadata={{workspacesMetadata}} @isList={{false}} @isGrid={{true}} @moreMenuOptions={{moreMenuOptions}} @toCopyWorkspace={{action "toCopyWorkspace"}} />
        {{/if}}

        <PaginationControl @details={{workspacesMetadata}} @initiatePageChange={{action "initiatePageChange"}} />
      </div>
    </div>
  </div>
</div>

<div class="toggle-filter-menu">
  <button {{action 'toggleMenu'}}><i id="arrow-icon" class="fas fa-chevron-right"></i></button>
</div>

<script>
  $('.list-view').click(function (e) {
    if (!($('#filter-list-side').hasClass('collapse'))) {
      $('#arrow-icon').toggleClass('fa-rotate-180');
    }
    $('#filter-list-side').addClass('collapse');
  });

  $('#workspace-new-link').click(function (e) {
    $('#outlet').removeClass('hidden');
  });
</script>