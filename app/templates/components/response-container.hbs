{{#if isCreatingNewMentorReply}}
  <p class="feedback-mode">
    Crafting feedback for <a {{action 'openSubmission' workspace.id submission.id}} class="link">submission</a>
    in {{workspace.name}}
  </p>
{{else}}
  <p class="feedback-mode">
    {{#if isOwnSubmission}}
      Viewing feedback for
      {{else if isOwnMentorReply}}
        Viewing your own mentoring feedback
      {{else}}
        Viewing feedback
        {{#if mentorReplyDisplayResponse}}
          authored by {{mentorReplyDisplayResponse.createdBy.username}}
        {{/if}}
    {{/if}}
    for {{studentDescriptor}}
    <a {{action 'openSubmission' workspace.id submission.id}} class="link">submission</a>
    in {{workspace.name}}
  </p>
{{/if}}

<div class="response-flex-container ">
  <div class="response-flex-item submission{{if showApproverReply ' third'}}">
    <ResponseSubmissionView @store={{this.store}} @response={{response}} @submission={{submission}} @workspace={{workspace}} @wsResponses={{cleanWorkspaceResponses}} @studentSubmissions={{submissions}} @onSubChange={{action "onSubmissionChange"}} @sendRevisionNotices={{action "sendSubmissionRevisionNotices"}} @isParentWorkspace={{isParentWorkspace}} />
  </div>

  <div class="response-flex-item mentor {{if showApproverReply 'third'}}">
    <ResponseMentorReply @store={{this.store}} @isCreating={{isCreatingNewMentorReply}} @response={{response}} @submission={{submission}} @workspace={{workspace}} @mentorReplies={{mentorReplies}} @responseToApprove={{responseToApprove}} @displayResponse={{mentorReplyDisplayResponse}} @canDirectSend={{canDirectSend}} @canApprove={{canApprove}} @isOwnMentorReply={{isOwnMentorReply}} @onSaveSuccess={{action "onSaveSuccess"}} @onMentorReplySwitch={{action "onMentorReplySwitch"}} @toResponses={{action "toResponses"}} @submissionResponses={{nonTrashedResponses}} @canSend={{canSend}} @isMentorRecipient={{isMentorRecipient}} @isOwnSubmission={{isOwnSubmission}} @toNewResponse={{action "toNewResponse"}} @priorMentorRevision={{priorMentorRevision}} @iconFillOptions={{iconFillOptions}} @toSubmission={{action "onSubmissionChange"}} @handleResponseThread={{action "handleResponseThread"}} @isParentWorkspace={{isParentWorkspace}} />
  </div>

  {{#if showApproverReply}}
    <div class="response-flex-item approver third">
      <ResponseApproverReply @store={{this.store}} @approverReplies={{approverReplies}} @responseToApprove={{responseToApprove}} @menteeResponse={{menteeResponse}} @workspace={{workspace}} @submission={{submission}} @canApprove={{canApprove}} @isOwnMentorReply={{isOwnMentorReply}} @primaryReply={{primaryApproverReply}} @isOwnApproverReply={{isOwnApproverReply}} @reviewedResponse={{reviewedResponse}} @toResponses={{action "toResponses"}} @iconFillOptions={{iconFillOptions}} @subResponses={{subResponses}} @handleResponseThread={{action "handleResponseThread"}} />
    </div>
  {{/if}}
</div>



